<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My WordPress MVC Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Html.Partial("_WPHeadScripts")
</head>
<body>
    @Html.Partial("~/Views/MVC/_MVCHeader.cshtml")

    @Html.Partial("_WPSlider")

<div class="container body-content">
        @RenderBody()
        <hr />
    <footer>
        @Html.Partial("_WPFootNavMenu")
        <p>&copy; @DateTime.Now.Year - My WordPress MVC Application</p>
    </footer>
    </div>
    @Html.Partial("_WPFootScripts")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
